{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "noEmit": false,
    "outDir": "dist",
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    "rootDir": "src",
    "strict": true,
    "target": "es2022"
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true
  }
}
