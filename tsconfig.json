{
  "compilerOptions": {
    "declaration": true,
    "module": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "bundler",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true
  }
}
